= form_for @roomtype do |f|
  - if @roomtype.errors.any?
    #error_explanation
      %h2= "#{pluralize(@roomtype.errors.count, "error")} prohibited this roomtype from being saved:"
      %ul
        - @roomtype.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :description
    = f.text_field :description
  .actions
    = f.submit 'Save'
