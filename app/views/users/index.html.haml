=breadcrumb_tag do
  %li.active
    = t('breadcrumb.users')

.page-header
  %h1= t('headers.users.index')

%table.table.table-hover
  %caption
    = link_to new_user_path, class: 'btn btn-success' do
      = fa_icon :plus
      = t('buttons.new.user')
  %thead
    %tr
      %th= User.human_attribute_name(:email)
      %th= User.human_attribute_name(:last_name)
      %th= User.human_attribute_name(:first_name)
      %th= User.human_attribute_name(:patronymic)
      %th= User.human_attribute_name(:created_at)
      %th= User.human_attribute_name(:updated_at)
      %th
  %tbody
    - @users.each do |user|
      %tr
        %td.center= user.email
        %td.center= user.last_name
        %td.center= user.first_name
        %td.center= user.patronymic
        %td.center= user.created_at
        %td.center= user.updated_at
        %td.right
          = link_to edit_user_path(user), class: 'btn btn-info' do
            = fa_icon :edit
            = t('buttons.edit')
          = link_to user, :method => :delete,
          :data => { :confirm => t('buttons.confirm.user') },
          class: 'btn btn-danger' do
            = fa_icon :times
            = t('buttons.destroy')
